<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uk.ac.ed.faizan.objecttracker.MainActivity">


    <Button
        android:id="@+id/start_tracking_button"
        android:padding="@dimen/main_button_padding"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:drawableStart="@drawable/ic_starttracking_tablet"
        android:text="@string/start_tracking"
        android:textSize="@dimen/main_button_tablet_textsize" />

    <Button
        android:id="@+id/preferences_button"
        android:padding="@dimen/main_button_padding"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:drawableStart="@drawable/ic_preferences_tablet"
        android:gravity="center"
        android:text="@string/preferences"
        android:textSize="@dimen/main_button_tablet_textsize" />

    <Button
        android:id="@+id/view_recordings_button"
        android:padding="@dimen/main_button_padding"
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:drawableStart="@drawable/ic_viewrecording_tablet"
        android:text="@string/view_recordings"
        android:textSize="@dimen/main_button_tablet_textsize" />

</LinearLayout>
