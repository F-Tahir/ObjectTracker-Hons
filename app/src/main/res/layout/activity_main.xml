<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uk.ac.ed.faizan.objecttracker.MainActivity">

    <ImageView
        android:contentDescription="@string/product_icon_content_description"
        android:id="@+id/product_icon"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/product_icon"
        android:layout_centerInParent="true"
        android:paddingBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/start_tracking_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/start_tracking"
            android:gravity="center"/>

        <Button
            android:id="@+id/preferences_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/preferences" />

        <Button
            android:id="@+id/view_recordings_button"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/view_recordings" />

    </LinearLayout>
</RelativeLayout>
