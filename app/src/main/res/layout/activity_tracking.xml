<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111"
    android:orientation="vertical"
    tools:context="uk.ac.ed.faizan.objecttracker.TrackingActivity">

    <RelativeLayout
        android:id="@+id/camera_top_toolbar"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingLeft="@dimen/camera_ui_horizontal_margin"
        android:paddingRight="@dimen/camera_ui_horizontal_margin"
        android:paddingTop="@dimen/camera_ui_vertical_margin"
        android:paddingBottom="@dimen/camera_ui_vertical_margin">

        <Switch
            android:id="@+id/manual_tracking_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="@string/manual_mode"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"/>

        <Button
            android:id="@+id/select_color_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/set_color"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/freeze_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground"
            android:textAppearance="?android:textAppearanceSmall"
            android:text="@string/freeze_camera"
            android:textColor="@android:color/white"/>

    </RelativeLayout>

    <com.google.atap.tangoservice.TangoCameraPreview
        android:id="@+id/camera_preview"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <RelativeLayout
        android:id="@+id/camera_bottom_toolbar"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="@dimen/camera_ui_horizontal_margin"
        android:paddingRight="@dimen/camera_ui_horizontal_margin"
        android:paddingTop="@dimen/camera_ui_vertical_margin"
        android:paddingBottom="@dimen/camera_ui_vertical_margin">

        <ImageView
            android:id="@+id/pause_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:src="@drawable/ic_pause" />

        <TextView
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toStartOf="@id/pause_button"
            android:text="@string/timestamp"
            android:textColor="@android:color/white"
            android:textAppearance="?android:textAppearanceSmall"/>

        <ImageView
            android:id="@+id/record_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/timestamp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_record"
            android:clickable="true"
            android:onClick="onCaptureClick"/>

        <ImageView
            android:id="@+id/flashlight_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/pause_button"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_flash_auto"
            android:onClick="showFlashPopupMenu"/>


    </RelativeLayout>



</LinearLayout>
